    <style name="AppTheme.BannerTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/banner_title_padding</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:layout_marginBottom">@dimen/banner_title_margin</item>
        <item name="android:textSize">@dimen/banner_title_size</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AppTheme.ResultText" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:layout_marginRight">@dimen/result_text_margin_right</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
