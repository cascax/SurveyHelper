<resources>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
    </style>

<!--    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <!--<item name="colorControlHighlight">@color/primary</item>-->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:windowBackground">@color/primary_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.BannerTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">@dimen/banner_title_padding</item>
        <item name="android:paddingBottom">@dimen/banner_title_padding</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:layout_marginBottom">@dimen/banner_title_margin</item>
        <item name="android:layout_marginTop">@dimen/banner_title_margin_top</item>
        <item name="android:textSize">@dimen/banner_title_size</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="AppTheme.ResultText" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:layout_marginRight">@dimen/result_text_margin_right</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/title_primary</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
